@page
@model GameCatalog.Pages.Games.IndexModel
@{
    ViewData["Title"] = "Каталог игр";
}

<div class="content-overlay">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Список игр</h1>
        <a asp-page="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Добавить игру
        </a>
    </div>

    <div class="mb-3 position-relative">
        <input type="text" id="searchBox" class="form-control" placeholder="Поиск игр..." autocomplete="off" />
    </div>

    <div id="gamesContainer" class="row">
        @foreach (var game in Model.Games)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <img src="@game.ImageUrl" class="card-img-top" alt="@game.Title" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@game.Title</h5>
                        <p class="card-text">@game.Developer (@game.ReleaseYear)</p>
                        <p class="card-text">Жанр: @(game.Genre?.Name ?? "Не указан")</p>
                        <p class="card-text description flex-grow-1">@game.Description</p>
                        <a asp-page="Details" asp-route-id="@game.Id" class="btn btn-primary mt-auto">Подробнее</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <nav aria-label="Пагинация" class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-pageNumber="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
