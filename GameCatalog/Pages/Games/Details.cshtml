@page "{id:int}"
@model GameCatalog.Pages.Games.DetailsModel
@{
    ViewData["Title"] = "Детали игры";
}

<h1>@Model.Game.Title</h1>

<div class="card mb-3">
    <img src="@Model.Game.ImageUrl" class="card-img-top" alt="@Model.Game.Title" />
    <div class="card-body">
        <h5 class="card-title">@Model.Game.Title</h5>
        <p class="card-text">Разработчик: @Model.Game.Developer (@Model.Game.ReleaseYear)</p>
        <p class="card-text">Жанр: @(Model.Game.Genre != null ? Model.Game.Genre.Name : "Не указан")</p>
        <p class="card-text">@Model.Game.Description</p>

        <a asp-page="Edit" asp-route-id="@Model.Game.Id" class="btn btn-warning me-2">Редактировать</a>
        <a asp-page="Delete" asp-route-id="@Model.Game.Id" class="btn btn-danger">Удалить</a>
        <a asp-page="Index" class="btn btn-secondary ms-2">Назад к списку</a>
    </div>
</div>