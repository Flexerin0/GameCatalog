@page "{id:int}"
@model GameCatalog.Pages.Games.DetailsModel
@{
    ViewData["Title"] = "Детали игры";
}

<h1>@Model.Game.Title</h1>

<div class="container fade-in">
    <div class="card shadow-lg border-0">
        <img src="@Model.Game.ImageUrl" class="card-img-top rounded-top" alt="@Model.Game.Title" />
        <div class="card-body">
            <h2 class="card-title mb-3">@Model.Game.Title</h2>

            <p class="card-text mb-2"><strong>Разработчик:</strong> @Model.Game.Developer (@Model.Game.ReleaseYear)</p>
            <p class="card-text mb-3"><strong>Жанр:</strong> @(Model.Game.Genre != null ? Model.Game.Genre.Name : "Не указан")</p>

            <div class="card-text description-full">@Model.Game.Description</div>

            <div class="d-flex justify-content-between mt-4">
                <div>
                    <a asp-page="Edit" asp-route-id="@Model.Game.Id" class="btn btn-outline-warning me-2">
                        <i class="bi bi-pencil-square"></i> Редактировать
                    </a>
                    <a asp-page="Delete" asp-route-id="@Model.Game.Id" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Удалить
                    </a>
                </div>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Назад к списку
                </a>
            </div>
        </div>
    </div>
</div>