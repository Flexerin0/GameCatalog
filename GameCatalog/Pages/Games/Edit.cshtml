@page "{id:int}"
@model GameCatalog.Pages.Games.EditModel
@{
    ViewData["Title"] = "Редактирование игры";
}

<h1>Редактировать игру</h1>

<form method="post">
    <input type="hidden" asp-for="Game.Id" />
    <div class="form-group">
        <label asp-for="Game.Title" class="form-label"></label>
        <input asp-for="Game.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Game.Developer" class="form-label"></label>
        <input asp-for="Game.Developer" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Game.ReleaseYear" class="form-label"></label>
        <input asp-for="Game.ReleaseYear" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Game.GenreId" class="form-label">Жанр</label>
        <select asp-for="Game.GenreId" class="form-control" asp-items="Model.Genres"></select>
    </div>

    <div class="form-group">
        <label asp-for="Game.Description" class="form-label"></label>
        <textarea asp-for="Game.Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Game.ImageUrl" class="form-label"></label>
        <input asp-for="Game.ImageUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-page="Index" class="btn btn-secondary">Назад</a>
</form>
